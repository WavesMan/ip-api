ADDR=:8080
UI_DIST=ui/dist
API_BASE=/api

PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB=ipapi
PG_SSLMODE=disable
PG_MAX_OPEN_CONNS=50
PG_MAX_IDLE_CONNS=25

REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASS=
REDIS_DB=0

# 缓存与去重窗口（秒）
CACHE_TTL_SECONDS=600
DEDUP_TTL_SECONDS=600

LOG_LEVEL=info
LOG_FORMAT=text

# 数据刷新（数据库导入）
# 已废弃：仅使用本地 IPIP 数据源初始化写库
AUTO_REPAIR_DB=true
IMPORT_IPIP_TO_DB=false

# MaxMind GeoIP mmdb 下载（已废弃，不再使用）
GEOIP_ACCOUNT_ID=
GEOIP_LICENSE_KEY=
GEOIP_EDITION_ID=GeoLite2-City
GEOIP_DB_PATH=data/GeoLite2-City.mmdb
GEOIP_HOUR=4
GEOIP_FORCE_UPDATE=0

# IPIP 本地数据源路径
IPIP_PATH=data/ipip/ipipfree.ipdb
IPIP_WORKERS=8

